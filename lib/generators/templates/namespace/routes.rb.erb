module API
  module V1
    module <%= name.camelize.singularize %>
      class Routes < Grape::API
        # Format response
        formatter :json, ::API::SuccessFormatter
        error_formatter :json, ::API::ErrorFormatter

        mount <%= GrapeResource.class_name_prefix %>::<%= name.camelize.singularize %>::Resources::<%= name.camelize.singularize %>
      end
    end
  end
end
